# SDS Controller Configuration

[server]
listen_address = "0.0.0.0"
port = 3374

[dispatch]
# Path to dispatch config file
config_path = "/liliang/.dispatch/config.toml"
# Parallel execution limit for operations
parallel = 10
# Storage nodes
hosts = [
    "orange1",
    "orange2",
    "orange3"
]

[database]
# Database file path (default: /var/lib/sds/sds.db)
path = "/var/lib/sds/sds.db"

[tls]
enabled = false
# ca_cert = "/etc/sds/certs/ca.crt"
# client_cert = "/etc/sds/certs/client.crt"
# client_key = "/etc/sds/certs/client.key"

[log]
level = "info"  # debug, info, warn, error
format = "json"  # json or text

[storage]
default_pool_type = "vg"
default_snapshot_suffix = "_snap"
